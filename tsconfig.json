{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    // "allowJs": true, // remove this once all files converted into typescript
    "checkJs": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": ["dom", "es2017"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "coverage", "spec"]
}
